<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/statisticsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:tint="@color/white"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_statistics"
            android:layout_gravity="end"/>
        <ImageButton
            android:id="@+id/addCourseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:tint="@color/white"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_add_24"
            android:layout_gravity="end"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/fromEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="from $"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toStartOf="@id/toEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/courseList"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/toEdit"
        android:layout_width="0dp"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@id/filterButton"
        android:layout_height="wrap_content"
        android:hint="to $"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toEndOf="@id/fromEdit"
        app:layout_constraintBottom_toTopOf="@id/courseList"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/filterButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toEndOf="@id/toEdit"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/courseList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fromEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>